{
  "project": {
    "name": "Vital Synthesizer",
    "version": "1.0.0",
    "description": "Professional C++ synthesizer with advanced DSP capabilities",
    "authors": ["Vital Development Team"],
    "license": "MIT",
    "homepage": "https://github.com/vital-synth/vital",
    "repository": "https://github.com/vital-synth/vital",
    "documentation": "https://vital-synth.github.io/docs"
  },
  "build": {
    "cxx_standard": 17,
    "minimum_cmake_version": "3.16",
    "parallel_jobs": "auto",
    "default_build_type": "Release",
    "warnings_as_errors": false,
    "optimization_level": "O2",
    "warnings": ["-Wall", "-Wextra", "-Wpedantic"]
  },
  "plugins": {
    "vst3": {
      "enabled": true,
      "output_path": "build/VST3",
      "bundle_name": "VitalSynthesizer.vst3"
    },
    "au": {
      "enabled": true,
      "output_path": "build/AU",
      "bundle_name": "VitalSynthesizer.component",
      "platform": "macOS"
    },
    "lv2": {
      "enabled": true,
      "output_path": "build/LV2",
      "manifest": "VitalSynthesizer.lv2/manifest.ttl"
    }
  },
  "dependencies": {
    "system": [
      {
        "name": "Threads",
        "package": "Threads",
        "required": true
      },
      {
        "name": "Math",
        "package": "m",
        "required": false
      }
    ],
    "external": [
      {
        "name": "PortAudio",
        "version": "19.7.0",
        "purpose": "Audio I/O",
        "license": "MIT",
        "optional": false
      },
      {
        "name": "RtMidi", 
        "version": "4.0.0",
        "purpose": "MIDI I/O",
        "license": "MIT",
        "optional": false
      },
      {
        "name": "JUCE",
        "version": "7.0.0",
        "purpose": "Audio framework",
        "license": "GPL/Commercial",
        "optional": true
      }
    ]
  },
  "features": {
    "audio_effects": {
      "reverb": {
        "algorithm": "schroeder",
        "supports": ["hall", "room", "plate", "cathedral"]
      },
      "chorus": {
        "algorithm": "modulated_delay",
        "max_voices": 4
      },
      "delay": {
        "algorithm": "digital_delay",
        "max_taps": 4
      },
      "distortion": {
        "algorithm": "waveshaper",
        "types": ["overdrive", "fuzz", "tube"]
      },
      "compressor": {
        "algorithm": "vca",
        "sidechain": true,
        "lookahead": false
      },
      "eq": {
        "algorithm": "biquad",
        "max_bands": 8
      }
    },
    "synthesis": {
      "oscillators": {
        "max_count": 4,
        "waveforms": ["sine", "triangle", "sawtooth", "square", "noise", "custom"],
        "anti_aliasing": true,
        "band_limiting": true
      },
      "filters": {
        "max_count": 2,
        "types": ["lowpass", "highpass", "bandpass", "notch", "allpass", "peaking", "lowshelf", "highshelf"],
        "oversampling": 2
      },
      "envelopes": {
        "max_count": 3,
        "type": "ADSR",
        "velocity_sensitivity": true
      },
      "lfos": {
        "max_count": 4,
        "waveforms": ["sine", "triangle", "sawtooth", "square", "noise", "random"],
        "sync_modes": ["free", "tempo", "key"]
      }
    },
    "voice_management": {
      "max_voices": 32,
      "voice_stealing": ["oldest", "quietest", "first", "random"],
      "unison": {
        "max_voices": 8,
        "detune_max": 1200
      }
    },
    "modulation": {
      "modulation_matrix": true,
      "max_sources": 16,
      "max_destinations": 64,
      "sources": ["LFO1", "LFO2", "LFO3", "LFO4", "ENV1", "ENV2", "ENV3", "Velocity", "AfterTouch", "ModWheel"]
    }
  },
  "midi": {
    "channels": 16,
    "note_range": [0, 127],
    "polyphonic_aftertouch": true,
    "channel_aftertouch": true,
    "pitch_bend_range": 24,
    "cc_support": {
      "modulation_wheel": 1,
      "breath_control": 2,
      "foot_control": 4,
      "portamento_time": 5,
      "main_volume": 7,
      "balance": 8,
      "pan": 10,
      "expression": 11,
      "damper_pedal": 64,
      "portamento": 65,
      "sostenuto": 66,
      "soft_pedal": 67
    },
    "midi_clock": true,
    "midi_through": true
  },
  "ui": {
    "platforms": ["windows", "macos", "linux"],
    "dpi_awareness": true,
    "themes": ["default", "dark", "light", "colorful"],
    "fonts": ["system_default", "roboto", "helvetica"],
    "components": {
      "main_window": {
        "default_size": [800, 600],
        "min_size": [400, 300],
        "resizable": true,
        "fullscreen_support": true
      },
      "editor": {
        "default_size": [1000, 800],
        "zoom_levels": [0.5, 0.75, 1.0, 1.25, 1.5, 2.0]
      },
      "keyboard": {
        "octaves": 8,
        "velocity_sensitivity": true,
        "aftertouch_support": true
      }
    }
  },
  "audio": {
    "sample_rates": [44100, 48000, 88200, 96000, 192000],
    "buffer_sizes": [64, 128, 256, 512, 1024, 2048],
    "max_channels": 2,
    "bit_depth": 32,
    "oversampling": [1, 2, 4],
    "low_latency_mode": true,
    "direct_monitoring": true
  },
  "presets": {
    "format": "json",
    "compression": false,
    "categories": ["Lead", "Pad", "Bass", "Arp", "Pluck", "Fx", "Drone"],
    "max_presets": 999,
    "auto_save": true,
    "search_support": true,
    "favorites": true
  },
  "performance": {
    "target_cpu_usage": 80,
    "monitoring": true,
    "profiling": false,
    "optimization_flags": ["-O2", "-ffast-math", "-march=native"]
  },
  "testing": {
    "unit_tests": true,
    "integration_tests": true,
    "performance_tests": true,
    "audio_tests": true,
    "midi_tests": true,
    "coverage_threshold": 80
  },
  "packaging": {
    "windows": {
      "installer": "NSIS",
      "signing": true,
      "custom_actions": true
    },
    "macos": {
      "notarization": true,
      "code_signing": true,
      "app_store": false
    },
    "linux": {
      "formats": ["AppImage", "Deb", "RPM", "Flatpak"],
      "desktop_entry": true
    }
  },
  "documentation": {
    "api_docs": "doxygen",
    "user_manual": "markdown",
    "tutorials": "interactive",
    "examples": true,
    "changelog": "keepachangelog",
    "contributing_guide": true
  },
  "ci": {
    "platforms": ["windows", "macos", "ubuntu", "fedora"],
    "compilers": ["gcc", "clang", "msvc"],
    "build_matrix": true,
    "test_matrix": true,
    "static_analysis": true,
    "benchmarking": true
  }
}